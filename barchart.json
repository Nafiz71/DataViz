{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top Job Titles by Average Base Salary",
  "title": "Top Job Titles by Average Base Salary",
  "data": {
    "url": "https://raw.githubusercontent.com/Nafiz71/DataViz/refs/heads/main/filtered_top_10_job_titles.csv",
    "format": {"type": "csv"}
  },
  "mark": "bar",
  "transform": [
    {
      "aggregate": [{"op": "mean", "field": "Estimate Base Salary", "as": "average_salary"}],
      "groupby": ["Job Title"]
    },
    {
      "window": [{"op": "row_number", "as": "rank"}],
      "sort": [{ "field": "average_salary", "order": "descending" }]
    },
    {
      "calculate": "datum.rank < 10 ? datum['Job Title'] : 'All Others'", "as": "ranked_job_title"
    }
  ],
  "encoding": {
    "x": {
      "aggregate": "mean",
      "field": "average_salary",
      "type": "quantitative",
      "title": "Average Base Salary (AUD)"
    },
    "y": {
      "sort": {"op": "mean", "field": "average_salary", "order": "descending"},
      "field": "ranked_job_title",
      "type": "ordinal",
      "title": "Job Title"
    }
  }
}
