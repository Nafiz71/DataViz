{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": "Company Size vs Estimate Base Salary",
  "data": {
    "url": "https://raw.githubusercontent.com/Nafiz71/DataViz/refs/heads/main/SizeCom%5Bfiltered_top_10_job_titles.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "CompanySizeThreshold",
      "value": 1000,
      "bind": {
        "input": "range",
        "min": 250,
        "max": 10000,
        "step": 250,
        "name": "Select Minimum Company Size: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum['Company Size'] >= CompanySizeThreshold"
    }
  ],
  "encoding": {
    "x": {
      "field": "Estimate Base Salary",
      "type": "quantitative",
      "title": "Estimate Base Salary (AUD)"
    },
    "y": {
      "field": "Company Size",
      "type": "quantitative",
      "title": "Company Size",
      "scale": {"domain": [0, 10000]},
      "axis": {
        "tickCount": 7,
        "values": [250, 500, 1000, 5000, 7500, 10000],
        "labelExpr": "' ' + datum.value + ' +'"
      }
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Company Size",
          "type": "quantitative",
          "scale": {
            "domain": [0, 250, 500, 1000, 5000, 7500, 10000],
            "range": [50, 100, 150, 200, 250, 300, 400]
          }
        },
        "color": {
          "field": "State",
          "type": "nominal"
        },
        "tooltip": [
          {
            "field": "Company",
            "type": "nominal",
            "title": "Company Name"
          },
          {
            "field": "Estimate Base Salary",
            "type": "quantitative",
            "title": "Base Salary"
          },
          {
            "field": "Company Size",
            "type": "quantitative",
            "title": "Company Size"
          },
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "legend": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "title": {
      "font": "Oxygen",
      "fontSize": 16,
      "fontWeight": 600
    }
  }
}
