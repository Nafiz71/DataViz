{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/Nafiz71/DataViz/refs/heads/main/ne_10m_admin_1_states_provinces.json",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },
  "params": [
    {
      "name": "Salary_Above",
      "value": 50000,
      "bind": {
        "input": "range",
        "min": 50000,
        "max": 150000,
        "step": 1000,
        "name": "Minimum Salary (AUD): "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.properties.adm0_a3 === 'AUS'"
    },
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Nafiz71/DataViz/refs/heads/main/AustraliaDataScienceJob2.csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "State",
        "fields": ["Estimate Base Salary"]
      }
    },
    {
      "calculate": "toNumber(replace(datum['Estimate Base Salary'], /[$,]/g, ''))",
      "as": "SalaryNum"
    },
    {
      "filter": "datum.SalaryNum > Salary_Above"
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "tooltip": true
  },
  "encoding": {
    "color": {
      "field": "SalaryNum",
      "type": "quantitative",
      "title": "Average Base Salary (AUD)",
      "scale": {
        "type": "linear",
        "domain": [50000, 75000, 100000, 125000, 150000],
        "range": [
          "#ffffff",
          "#ffcc99",
          "#ff9966",
          "#ff6633",
          "#ff3300",
          "#ff0000"
        ]
      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State Name"},
      {"field": "SalaryNum", "type": "quantitative", "title": "Estimate Base Salary"}
    ]
  },
  "config": {
    "view": {"stroke": "transparent"}
  }
}
